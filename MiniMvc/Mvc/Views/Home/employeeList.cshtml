@using Mvc.Models;

@model  IEnumerable<Employee>

    @{
        ViewBag.Title = "employeeList";
    }

    <table>
        <tr>
            <th>ID</th>
            <th>姓名</th>
            <th>性别</th>
            <th>部门</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Id)</td>
                <td>
                    @Html.ActionLink(item.Name, "GetById",new { Name=item.Name,id=item.Id})
                </td>
                <td>@Html.DisplayFor(m=>item.Gender)</td>
                <td>@Html.DisplayFor(m => item.Deparment)</td>
             </tr>
       }

</table>

